@model PatientRegistration.Models.Patient

<h4>Edit Patient</h4>
<form asp-action="Edit" method="post">
    <!--Id-->
    <div class="form-group">
        <label asp-for="PatientId" class="control-label">Reg No:</label>
        <input asp-for="PatientId" class="form-control" id="id" readonly />
    </div>
    <div class="form-group">
        <label>Registration No</label>
        <input asp-for="RegistrationNo" class="form-control" />
        <span asp-validation-for="RegistrationNo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Patient Name</label>
        <input asp-for="PatientName" class="form-control" />
        <span asp-validation-for="PatientName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>DOB</label>
        <input asp-for="Dob" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label>Gender</label>
        <select asp-for="Gender" class="form-control">
            <option value="">Select Gender</option>
            <option>Male</option>
            <option>Female</option>
        </select>
    </div>
    <div class="form-group">
        <label>Address</label>
        <input asp-for="Address" class="form-control" />
    </div>
    <div class="form-group">
        <label>Phone No</label>
        <input asp-for="PhoneNo" class="form-control" />
    </div>
    <div class="form-group">
        <label>Membership</label>
        <select asp-for="MembershipId" class="form-control">
            <option value="">Select Membership</option>
            @foreach (var m in ViewBag.Memberships)
            {
                if (Model.MembershipId == m.MembershipId)
                {
                    <option value="@m.MembershipId" selected>@m.MemberDescription</option>
                }
                else
                {
                    <option value="@m.MembershipId">@m.MemberDescription</option>
                }
            }
        </select>
    </div>
    <div class="form-group">
        <label>Member Description</label>
        <input id="MemberDescription" name="MemberDescription" class="form-control" readonly />
    </div>

    <button type="submit" class="btn btn-success">Update</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
         var membershipData = {
            @foreach (var m in ViewBag.Memberships)
            {
                    <text>"@m.MembershipId": "@m.MemberDescription",</text>
            }
        };

        var dropdown = document.getElementById("MembershipId");
        var descInput = document.getElementById("MemberDescription");

        function updateDesc() {
            descInput.value = membershipData[dropdown.value] || "";
        }
        dropdown.addEventListener("change", updateDesc);
        updateDesc();
    </script>
}
    
