@model PatientRegistration.Models.Patient

<h4>New Patient Registration</h4>
<form asp-action="Create" method="post">
    <div class="form-group mb-2">
        <label>Registration No</label>
        <input asp-for="RegistrationNo" class="form-control" />
        <span asp-validation-for="RegistrationNo" class="text-danger"></span>
    </div>
    <div class="form-group mb-2">
        <label>Patient Name</label>
        <input asp-for="PatientName" class="form-control" />
        <span asp-validation-for="PatientName" class="text-danger"></span>
    </div>
    <div class="form-group mb-2">
        <label>DOB</label>
        <input asp-for="Dob" type="date" class="form-control" />
    </div>
    <div class="form-group mb-2">
        <label>Gender</label>
        <select asp-for="Gender" class="form-control">
            <option value="">Select Gender</option>
            <option>Male</option>
            <option>Female</option>
        </select>
    </div>
    <div class="form-group mb-2">
        <label>Address</label>
        <input asp-for="Address" class="form-control" />
    </div>
    <div class="form-group mb-2">
        <label>Phone No</label>
        <input asp-for="PhoneNo" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label>Membership</label>
        <select asp-for="MembershipId" class="form-control">
            <option value="">Select Membership</option>
            @foreach (var m in ViewBag.Memberships)
            {
                <option value="@m.MembershipId">@m.MemberDescription</option>
            }
        </select>
    </div>
    <div class="form-group mb-2">
        <label>Member Description</label>
        <input id="MemberDescription" name="MemberDescription" class="form-control" readonly />
    </div>
    
    <button type="submit" class="btn btn-success">Save</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        var membershipData = {
            @for (int i = 0; i < ((IEnumerable<dynamic>)ViewBag.Memberships).Count(); i++)
            {
                    var m = ((IEnumerable<dynamic>)ViewBag.Memberships).ElementAt(i);
                    <text>"@m.MembershipId": { MemberDescription: "@m.MemberDescription", InsuredAmount: "@m.InsuredAmount" }@((i < ((IEnumerable<dynamic>)ViewBag.Memberships).Count() - 1) ? "," : "")</text>
            }
        };

        var membershipDropdown = document.getElementById("MembershipId");
        membershipDropdown.addEventListener("change", function() {
            var selectedId = this.value;
            if (selectedId && membershipData[selectedId]) {
                document.getElementById("MemberDescription").value = membershipData[selectedId].MemberDescription;
                document.getElementById("InsuredAmount").value = membershipData[selectedId].InsuredAmount;
            } else {
                document.getElementById("MemberDescription").value = "";
                document.getElementById("InsuredAmount").value = "";
            }
        });
    </script>
}